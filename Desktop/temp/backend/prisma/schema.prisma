generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model user{
  id String @id  @default(uuid())
  username String 
  email String @unique
  password String @unique
  restuaurant_visited restaurant []
  updateUserProfile updateuser[]
  reviews  review[]  @relation("UserReviews")
}
model restaurant{
 id String @id @default(uuid())
 name String 
 location String
 restaurant_visited_by_user user @relation(fields: [userId],references: [id])
 userId String
 reviews review[]
}
model updateuser {
  id        String @id @default(uuid())
  userId    String
  user      user   @relation(fields: [userId], references: [id])
  email     String @unique
  password  String
}
model review{
  id String @id @default(uuid())
  rating Int 
  comment String
  reviewedByUser user[]  @relation("UserReviews")
  restaurantId String
  restaurant restaurant @relation(fields: [restaurantId], references: [id])
}